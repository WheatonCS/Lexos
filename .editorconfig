
# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4

# 2 space indentation for js
[*.js]
indent_style = space
indent_size = 2

# all the yaml and json file
[{*.json,*.yml}]
indent_style = space
indent_size = 2
